{
  "name": "neopass",
  "version": "0.8.4",
  "description": "A password validation and generation tool kit",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc && npm run load",
    "build-test": "tsc",
    "clean": "rm -rf lib",
    "cover": "nyc mocha",
    "codecov": "source .env && npm run cover && codecov -t $CODECOV_TOKEN",
    "load": "source .env && node ./util/file-loader ./src/views ./lib",
    "test": "npm run build && mocha",
    "test-watch": "nodemon -e ts --ignore '*.d.ts' --exec 'mocha'",
    "prepublishOnly": "npm run clean && npm run test",
    "word-gen": "./word-gen"
  },
  "homepage": "https://github.com/neopass/neopass#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neopass/neopass.git"
  },
  "bugs": {
    "url": "https://github.com/neopass/neopass/issues"
  },
  "keywords": [
    "password",
    "passphrase",
    "validator",
    "validation",
    "strength",
    "generation",
    "generator",
    "topology"
  ],
  "author": "James Abney",
  "license": "MIT",
  "bin": {
    "neopass": "./bin/neopass"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.3",
    "@types/node": "^10.5.8",
    "codecov": "^3.3.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "nyc": "^14.0.0",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.1.0",
    "tslint": "^5.10.0",
    "typescript": "^3.4.5"
  },
  "files": [
    "lib"
  ],
  "dependencies": {
    "regex-each": "^1.0.3"
  }
}
